---
import {Icon} from "astro-icon/components"
---

<div class="logo-wrapper">
    <div class="logo-box big-shadow"><Icon name="ic:baseline-code"></Icon></div>
    <p class="logo-text"><span class="yellow">$&gt;</span>yanklio/yojo</p>
</div>

<style>
    .logo-wrapper {
        display: flex;
        gap: 12px;
        align-items:center;

        .logo-box {
            width: 50px;
            height: 50px;
            background: var(--yellow-dim);
            border: 3px solid var(--fg1);

            display: flex;
            align-items: center;
            justify-content: center;

            svg {
               font-size: 40px;
            }
        }

        .logo-text {
            font-weight: 600;
            font-size: 1.1rem;
            padding-top: 7px;
        }
    }


}
</style>
