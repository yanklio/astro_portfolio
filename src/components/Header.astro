---
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
    <nav>
        <Logo />
        <Navigation />
        <ThemeIcon />
    </nav>
</header>

<style>
    nav {
        height: 82px;

        background-color: var(--bg_soft);
        position: sticky;
        top: 0;
        border-bottom: 4px solid var(--fg2);
        width: 100%;

        padding: 2px 16px;

        display: flex;
        justify-content: space-between;
    }
</style>
