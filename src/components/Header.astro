---
import Menu from "./Menu.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
    <nav>
        <Navigation />
        <div>
            <ThemeIcon />
            <Menu />
        </div>
    </nav>
</header>

<style>
    div {
        display: flex;
        justify-content: space-between;
    }

    nav {
        background-color: var(--bg1);
        position: sticky;
        top: 0;
        border-bottom: 1px solid var(--yellow);
        width: 100%;

        padding: 2px 8px;

        display: flex;
        justify-content: space-between;
    }
</style>
