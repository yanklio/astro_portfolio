---
import { Icon } from "astro-icon/components";
---

<a class="rss-button big-shadow" href="/rss.xml">
    <Icon name="ic:outline-rss-feed" />
    <span class="rss-text">Feed</span>
</a>

<style>
    .rss-button {
        display: flex;
        align-items: center;
        border: 3px solid var(--fg1);

        height: 42px;
        padding: 0 20px;
        background: var(--aqua-dim);
        font-size: 1.2rem;
        color: var(--fg1);
        text-decoration: none;
    }
    .rss-button:hover {
        background-color: var(--aqua);
    }

    .rss-text {
        margin-left: 8px;
    }
</style>
