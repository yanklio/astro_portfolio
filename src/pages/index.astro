---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
---

<BaseLayout pageTitle="Yanklio | Home">
    <div class="hero-center">
        
        <div class="computer-illu">
            <svg width="240" height="160" viewBox="0 0 240 160" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- Monitor -->
                <rect x="40" y="10" width="160" height="100" rx="4" stroke="var(--fg1)" stroke-width="3" fill="var(--bg)"/>
                <rect x="50" y="20" width="140" height="80" fill="var(--bg2)"/>
                <!-- Stand -->
                <path d="M90 110 H150 L140 125 H100 L90 110Z" fill="var(--fg1)"/>
                <rect x="80" y="125" width="80" height="5" rx="2" fill="var(--fg1)"/>
                <!-- Keyboard -->
                <rect x="25" y="138" width="145" height="12" rx="2" stroke="var(--fg1)" stroke-width="3" fill="var(--bg)"/>
                <line x1="35" y1="144" x2="160" y2="144" stroke="var(--fg1)" stroke-width="2" stroke-dasharray="4 4"/>
                <!-- Mouse -->
                <rect x="185" y="138" width="20" height="12" rx="6" stroke="var(--fg1)" stroke-width="3" fill="var(--bg)"/>
            </svg>
        </div>

        <div class="bento-grid">
            
            <div class="paper-card paper-border paper-shadow id-card">
                <div class="card-content">
                    <span class="label">USER_ID</span>
                    <h1 class="giant-text">YANKLIO</h1>
                    <div class="deco-line"></div>
                    <span class="id-number">#001</span>
                </div>
            </div>

            <div class="stack-col">
                <div class="paper-card paper-border paper-shadow role-card">
                    <span class="label">CURRENT_ROLE</span>
                    <span class="value">Creative Developer</span>
                    <span class="sub-value">& Digital Gardener</span>
                </div>

                <!-- Socials Card -->
                <div class="paper-card paper-border paper-shadow socials-card">
                    <div class="social-row">
                        <a href="https://github.com/" target="_blank" rel="noopener noreferrer" class="net-link">
                            Github
                        </a>
                        <span class="divider">/</span>
                        <a href="https://linkedin.com/" target="_blank" rel="noopener noreferrer" class="net-link">
                            LinkedIn
                        </a>
                    </div>
                </div>

                <a href="/blog" class="primary-btn paper-button">
                    <span class="btn-text">ENTER_BLOG</span>
                    <span class="btn-icon">âžœ</span> 
                </a>
            </div>

        </div>
    </div>
</BaseLayout>

<style>
    .hero-center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
        padding: 1rem;
        gap: 3rem;
    }

    .computer-illu {
        margin-bottom: -1rem;
    }
    
    .bento-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        width: 100%;
        max-width: 900px;
    }

    @media (min-width: 768px) {
        .bento-grid {
            grid-template-columns: 1.2fr 1fr;
            grid-template-rows: 1fr;
            align-items: stretch;
        }
    }

    /* Card Base Styles */
    .paper-card {
        background-color: var(--bg);
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        transition: transform 0.2s ease;
    }

    .paper-card:hover {
        transform: translateY(-2px);
    }

    /* ID Column */
    .id-card {
        justify-content: space-between;
        min-height: 300px;
    }

    .card-content {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .giant-text {
        font-size: clamp(2.5rem, 9vw, 6rem);
        line-height: 1;
        margin: 1rem 0;
        font-weight: 900;
        letter-spacing: -0.04em;
        color: var(--fg);
        text-transform: uppercase;
    }

    .deco-line {
        width: 60px;
        height: 4px;
        background-color: var(--orange);
    }

    .id-number {
        color: var(--fg4);
        font-size: 0.9rem;
        align-self: flex-end;
    }

    /* Right Stack Column */
    .stack-col {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        justify-content: space-between;
    }

    .role-card {
        flex-grow: 1;
        justify-content: flex-start;
    }

    .socials-card {
        padding: 1.5rem;
    }

    .social-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1.2rem;
    }

    /* Typography Utilities */
    .label {
        font-size: 0.75rem;
        color: var(--gray);
        margin-bottom: 0.5rem;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    .value {
        color: var(--yellow);
        font-weight: 700;
        font-size: 1.5rem;
        line-height: 1.2;
    }
    
    .sub-value {
        color: var(--fg2);
        font-size: 1rem;
        margin-top: 0.25rem;
    }

    /* Buttons & Links */
    .primary-btn {
        background-color: var(--fg1);
        color: var(--bg);
        text-decoration: none;
        padding: 1.5rem 2rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: all 0.2s ease;
        font-size: 1.1rem;
    }

    .primary-btn:hover {
        background-color: var(--orange);
        color: var(--bg);
        transform: translate(-2px, -2px);
    }

    .net-link {
        color: var(--fg1);
        text-decoration: none;
        font-weight: 700;
        transition: color 0.2s ease;
        text-transform: uppercase;
    }

    .net-link:hover {
        color: var(--orange);
    }

    .divider {
        color: var(--fg4);
        opacity: 0.5;
    }
</style>
